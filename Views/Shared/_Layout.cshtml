            <div class="row" style="justify-content: center;">
                <img src="~/img/logo horizontally White.png" alt="Logo" style="width: 250px;">
            </div>
            <div class="row pt-4">
                <div class="col-md-1 col-lg-1 col-xl-1 d-flex justify-content-end">
                    <div class="vertical-line" style="height:150px"></div>
                </div>
